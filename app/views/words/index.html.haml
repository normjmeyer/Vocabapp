%h1 Listing words

%table
  %thead
    %tr
      %th Name
      %th Language
      %th Word class
      %th Definition
      %th Comments
      %th Frequency
      %th Dictionary
      %th
      %th
      %th

  %tbody
    - @words.each do |word|
      %tr
        %td= word.name
        %td= word.language
        %td= word.word_class
        %td= word.definition
        %td= word.comments
        %td= word.frequency
        %td= word.dictionary
        %td= link_to 'Show', word
        %td= link_to 'Edit', edit_word_path(word)
        %td= link_to 'Destroy', word, :method => :delete, :data => { :confirm => 'Are you sure?' }

