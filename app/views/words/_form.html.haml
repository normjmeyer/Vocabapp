= form_for @word do |f|
  - if @word.errors.any?
    #error_explanation
      %h2= "#{pluralize(@word.errors.count, "error")} prohibited this word from being saved:"
      %ul
        - @word.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :language
    = f.text_field :language
  .field
    = f.label :word_class
    = f.text_field :word_class
  .field
    = f.label :definition
    = f.text_area :definition
  .field
    = f.label :comments
    = f.text_area :comments
  .field
    = f.label :frequency
    = f.number_field :frequency
  .actions
    = f.submit 'Save'
